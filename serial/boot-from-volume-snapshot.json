{% set flavor_name = flavor_name or "m1.tiny" %}
{% set volume_type = volume_type or "" %}
{
    "NovaServers.boot_server_from_volume_snapshot": [
        {
            "args": {
                "flavor": {
                    "name": "m1.medium"
                },
                "image": {
                    "name": "Ubuntu 14.04 LTS"
                },
                "volume_size": 50,
                "volume_type": ""
            },
            "runner": {
                "type": "constant",
                "times": 10,
                "concurrency": 2
            },
            "context": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
